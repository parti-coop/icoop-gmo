<% if @petition.errors.any? %>
  $('#petition-form-panel').html('<%= escape_javascript(render "petitions/form", petition: @petition) %>');
<% else %>
  $('#petition-form-panel').html('<%= escape_javascript(render "petitions/thanks", petition: @petition) %>');
  $('#petition-list-panel').html('<%= escape_javascript(render "petitions/list", petitions: @petitions) %>');
  prepare_social_share($('.petition-thanks-panel'));
<% end %>
