- petition = @petitions.first
.progress-panel
  %p.petition-summary
    온라인 서명은
    %span
      %span.petition-count> #{number_with_delimiter(@online_count)}
      명,
      %br.visible-xs
      오프라인 서명은
    %span
      %span.petition-count> #{number_with_delimiter(@offline_count)}
      명 진행 중!

  .petition-bar-wrapper
    %span.petition-percentage.pull-left #{petition.total_percentage || 0}%
    %span
      %span.petition-goal.pull-right 100,000명 목표
      %span.petition-slash.pull-right &nbsp;/&nbsp;
      %span.petition-total-count.pull-right
        #{number_with_delimiter(petition.on_off_count)}명

    .petition-bar{style: ("background-color:#bfbfbf" if petition.on_off_count == 0)}
      - if petition.total_percentage <= 100
        .petition-counted{style: "width: #{petition.total_percentage}%"}
      - else
        .petition-counted{style: "width: 100%"}
  %br
  = link_to '나도 참여하기', root_path(anchor: 'petition-form-anchor'),  class: 'petition-btn btn hidden-xs'

